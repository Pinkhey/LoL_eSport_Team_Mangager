<Window x:Class="LoL_eSport_Team_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoL eSport Team Manager" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#1e1e2f">

    <Grid>
        <!-- Fő rács: Fejléc + Tartalom -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Fejléc -->
            <RowDefinition Height="*"/>
            <!-- Tartalom -->
        </Grid.RowDefinitions>

        <!-- Fejléc -->
        <DockPanel Grid.Row="0" Background="#2e2e3e">
            <TextBlock Text="LoL eSport Team Manager"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>

            <TextBlock x:Name="UsernameDisplay"
               Foreground="White"
               FontSize="16"
               VerticalAlignment="Center"
               Margin="20,0,0,0"
               DockPanel.Dock="Right" />

            <Button Content="Kijelentkezés"
                    HorizontalAlignment="Right"
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    Visibility="Collapsed"
                    x:Name="LogoutButton"
                    Click="LogoutButton_Click"/>
        </DockPanel>

        <!-- Tartalom: Navigációs sáv + Frame -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <!-- Oldalsáv -->
                <ColumnDefinition Width="*"/>
                <!-- Fő tartalom -->
            </Grid.ColumnDefinitions>

            <!-- Oldalsáv -->
            <StackPanel Background="#3e3e4e" Orientation="Vertical">
                <TextBlock Text="Navigáció"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="20,20,0,10"/>

                <Button Content="Dashboard" Margin="10" Click="Dashboard_Click"/>
                <Button Content="Players" Margin="10" Click="Players_Click"/>
                <Button Content="Matches" Margin="10" Click="Matches_Click"/>
                <Button Content="Statistics" Margin="10" Click="Statistics_Click"/>
            </StackPanel>

            <!-- Frame -->
            <Frame x:Name="MainFrame"
                   Grid.Column="1"
                   NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
