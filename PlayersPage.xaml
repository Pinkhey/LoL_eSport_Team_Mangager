<Page x:Class="LoL_eSport_Team_Mangager.PlayersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LoL_eSport_Team_Mangager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayersPage">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <Button Content="Új játékos hozzáadása" Click="AddPlayer_Click" Margin="0,20"/>

            <StackPanel x:Name="AdminTeamSelectorPanel" Visibility="Collapsed" Margin="10">
                <TextBlock Text="Válassz csapatot:" FontWeight="Bold" />
                <ComboBox x:Name="TeamSelectorComboBox" SelectionChanged="TeamSelectorComboBox_SelectionChanged" />
            </StackPanel>

            <StackPanel Name="PlayerForm" Visibility="Collapsed" Margin="0,20">
                <TextBlock Text="Név:"/>
                <TextBox Name="PlayerNameTextBox" Margin="0,5"/>
                <TextBlock Text="Pozíció:"/>
                <ComboBox Name="PlayerPositionComboBox" Margin="0,5">
                    <ComboBoxItem Content="Top"/>
                    <ComboBoxItem Content="Jungle"/>
                    <ComboBoxItem Content="Mid"/>
                    <ComboBoxItem Content="ADC"/>
                    <ComboBoxItem Content="Support"/>
                </ComboBox>
                <Button Content="Mentés" Click="SavePlayer_Click" Margin="0,10"/>
            </StackPanel>

            <Button Content="Játékos törlése" Click="DeletePlayer_Click" Margin="0,20"/>

        </StackPanel>
    </Grid>
</Page>
