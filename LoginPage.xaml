<Page x:Class="LoL_eSport_Team_Mangager.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LoL_eSport_Team_Mangager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Bejelentkezés"
                   Foreground="White"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <!-- Username field -->
        <Grid Grid.Row="1">
            <TextBox x:Name="UsernameTextBox"
                     Height="30"
                     VerticalContentAlignment="Center"
                     TextChanged="UsernameTextBox_TextChanged"/>
            <TextBlock x:Name="UsernamePlaceholder"
                       Text="Felhasználónév"
                       Foreground="Gray"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="Visible"/>
        </Grid>

        <!-- Password field -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <PasswordBox x:Name="PasswordBox"
                         Height="30"
                         VerticalContentAlignment="Center"
                         PasswordChanged="PasswordBox_PasswordChanged"/>
            <TextBlock x:Name="PasswordPlaceholder"
                       Text="Jelszó"
                       Foreground="Gray"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="Visible"/>
        </Grid>

        <!-- Login Button -->
        <Button Content="Bejelentkezés"
                Grid.Row="3"
                Margin="0,20,0,0"
                Height="35"
                Click="Button_Click"/>
    </Grid>
</Page>
