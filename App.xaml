<Application x:Class="LoL_eSport_Team_Mangager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="LoginPage.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Bundled Theme -->
                <materialDesign:BundledTheme BaseTheme="Dark"
                                         PrimaryColor="BlueGrey"
                                         SecondaryColor="Cyan" />

                <!-- Material Design 2 alapértelmezett stílusok -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- FONT Style-ok (ezek most már BENNE vannak a ResourceDictionary-ben!) -->
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Roboto"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Roboto"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Roboto"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>

</Application>
